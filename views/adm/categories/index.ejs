<%-include('../../partials/header.ejs')%>
<body>
    <%-include('../../partials/navbar.ejs')%>
    <section>
        <article class="container">
            <hr><h2 class="text-center">Categorias</h2><hr>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Título</th>
                        <th>Slug</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    <%categoriesInfo.forEach(categoryInfo => {%>
                        <tr>
                            <th><%=categoryInfo.id%></th>
                            <th><%=categoryInfo.title%></th>
                            <th><%=categoryInfo.slug%></th>
                            <th>    
                                <form method="get" action="/adm/categories/edit/<%=categoryInfo.id%>" style="display: inline;">
                                    <input type="hidden" name="id" value="<%=categoryInfo.id%>">
                                    <button class="btn btn-warning">Editar</button>
                                </form>

                                <form method="post" action="/categories/delete" style="display: inline;" onsubmit="confirmarDelecao(event)">
                                    <input type="hidden" name="id" value="<%=categoryInfo.id%>">
                                    <button class="btn btn-danger">Deletar</button>
                                </form>
                            </th>
                        </tr>
                    <%})%>
                </tbody>
            </table>
            <a class="btn btn-success" href="/adm/categories/new">Criar nova categoria</a>
        </article>
    </section>
</body>
<script>
    function confirmarDelecao(event){
        if(confirm("Certeza que deseja deletar está categoria ?"));
        else{
            event.preventDefault();
        }
    }
</script>
<%-include('../../partials/footer.ejs')%>